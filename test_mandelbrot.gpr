with "sdl.gpr";

project Test_Mandelbrot is

	for Languages use ("C");
	for Object_Dir use "obj";
	for Exec_Dir use "bin";
	for Source_Dirs use SDL'Source_Dirs & 
	(
		"../csc/**",
		"src/test_mandelbrot"
	);
	
	Main_Files :=
	(
		"test_mandelbrot_cpu.c",
		"test_mandelbrot_gpu.c"
	);
	
	for Main use Main_Files;
	
	for Source_Files use Main_Files &
	();
	
	package Builder is
		--for Executable ("name.c") use "name.exe";
	end Builder;

	package Compiler is

		for Switches ("C") use SDL.Compiler'Switches ("C");
	end Compiler;

	package Linker is
		for Switches ("C") use SDL.Linker'Switches ("C");
	end Linker;


end Test_Mandelbrot;
