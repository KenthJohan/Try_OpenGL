#version 330 core

in vec3 texpos;
in vec4 color;

out vec4 out_color;

uniform sampler2DArray tex;

void main()
{
	vec3 tp = texpos;
	//tp.z = 'H';
	
	vec4 sampled = texture (tex, tp);
	vec4 pixcol = vec4 (1.0, 1.0, 1.0, sampled.r);	
	float a = 0.5;
	out_color = (1.0-a) * color + (a) * pixcol;
}  
