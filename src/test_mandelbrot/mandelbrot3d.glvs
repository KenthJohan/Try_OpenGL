#version 330


layout (location = 0) in vec3 position;
layout (location = 1) in vec3 aColor;
layout (location = 2) in vec2 aTexCoord;

uniform vec2 translate;
uniform float scale;
uniform float maxu;
uniform float iteru;

uniform mat4 mvp;

out vec2 coord;
out float max;
out float iter;

void main(void)
{
	gl_Position = mvp * vec4 (position, 1);
	iter = iteru;
	max = maxu;
	coord = vec2 (position.xy) * scale + translate;
}
